@model SocialEyes.Domain.Entities.Poll

@{
    ViewBag.Title = "Poll";
}

<h2>@Html.DisplayFor(model => model.PollName) Poll</h2>

<div>
    <h4>@Html.DisplayFor(model => model.Company.CompanyName)</h4>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            Poll Question
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PollQuestion)
        </dd>

        <dt>
            Vote by:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

    </dl>
</div>

<hr />
<h3>Event Options</h3>
@Html.ActionLink("Create New Poll Option", "Create", "PollOption", new { id = Model.PollId }, null)
@using (Html.BeginForm("Create", "PollVote", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<table class="table">
    <tr>
        <th>
           Option:
        </th>
        <th>
           Event:
        </th>
        <th>
            Vote:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.PollOptions)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OptionIndex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionText)
            </td>
            <td>
                <input name="vote" type="radio" onclick="">
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "PollOption", new { id = item.PollOptionId }, null) |
                @Html.ActionLink("Details", "Details", "PollOption", new { id = item.PollOptionId }, null) |
                @Html.ActionLink("Delete", "Delete", "PollOption", new { id = item.PollOptionId }, null)
            </td>
        </tr>
    }

</table>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" class="btn btn-primary" value="Place Vote" />
    </div>
</div>
}

<p>
    @Html.ActionLink("Edit Poll", "Edit", new { id = Model.PollId }) |
    @Html.ActionLink("Back to Dashboard", "Company", "Company", new { id = Model.CompanyId }, null)
</p>
